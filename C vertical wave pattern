//This code will take the input from the user.
//and it will print vertical wave pattern according to the number of input. 



#include <stdio.h>

int main()
{
	int n,i,j,l,x;
	printf("Enter the  number of wave you want to make:");
	scanf("%d",&n);
	n=n-1;
    for(x=0;x<=n;x++)
    {
	for(i=0;i<=n;i++)
	{
		for(j=0;j<=i;j++)
		{
			printf("<>");
		}
		
		printf("\n");
	}
	
	for(i=n;i>=0;i--)
	{
		for(l=i;l>=0;l--)
		{
			printf("<>");
		}
		printf("\n");
	}

   }
	return 0;
}
